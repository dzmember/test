package test;

public class DemoHuWei {
	/**
	 * 进行字符串的反转，以空格为隔离
	 * @param a
	 * @return
	 */
	public static String reverseString(String a) {
		//将字符串以空格分隔为String数组
		String[] arr = a.split("");
		//遍历每个String元素
		for (int i = 0; i < arr.length; i++) {
			String temp=arr[i];
			char replaced;
			char[] charArray = temp.toCharArray();
			//将String元素转换为String数组，进而进行前后互换
			for (int j = 0; j < charArray.length; j++) {
				replaced=charArray[j];
				charArray[j]=charArray[charArray.length-1];
				charArray[charArray.length-1]=replaced;
			}
			String singleResult = charArray.toString();
			arr[i]=singleResult;
		}
		String result = arr.toString();
		return result;
		
	}
}
