package test;

public class DemoHuWei {
	/**
	 * 进行字符串的反转，以空格为隔离
	 * @param a
	 * @return
	 */
	public static String reverseString(String a) {
		//将字符串以空格分隔为String数组
		String[] arr = a.split(" ");
		int length = arr.length;
//		String result=null;
		//遍历每个String元素
		for (int i = 0; i <length; i++) {
			String temp=arr[i];
			char replaced;
			char[] charArray = temp.toCharArray();
			//将String元素转换为String数组，进而进行前后互换
			for (int j = 0; j < charArray.length/2; j++) {
				replaced=charArray[j];
				charArray[j]=charArray[charArray.length-1];
				charArray[charArray.length-1]=replaced;
			}
			//输出转换后的单个元素
			String singleResult = String.valueOf(charArray);
			arr[i]=singleResult;
			
		}
		//将循环结束后String数组再转换为String
		for (int i = 0; i < arr.length-1; i++) {
			result=result+arr[i]+" ";
		}
		result = result+arr[arr.length-1];
		return result;
		
	}
}
