  <mapper namespace = "com.cy.pj.goods.dao.GoodsDao"><!-- 这个namespace(命名空间)只是作为标识,没啥意义 -->
  <!-- 映射文件中每个元素都会封装为一个MappedStatament  这些元素是指insert标签 select标签等-->
  	<insert id="insertObject" parameterType="com.cy.pj.goods.pojo.Goods">
  		<!-- Mybatis没提示怎么解决?? -->
  		insert into tb_goods
  		(id,name,remark,createdTime)
  		value
  		(#{id},#{name},#{remark},now())<!-- mybatis的el表达式 -->
  	</insert>
  	<update id="updateObject">
        update tb_goods
        set name=#{name},
            remark=#{remark}
        where id=#{id}
    </update>
  </mapper>